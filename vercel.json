{
    "version": 2,
    "builds": [
      {
        "src": "backend/dist/index.js",
        "use": "@vercel/node",
        "config": {
          "prisma": {
            "schema": "backend/schema.prisma"
          }
        }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/dist/index.js"
      },
      {
        "src": "/socket.io/(.*)",
        "dest": "backend/dist/index.js"
      },
      {
        "src": "/(assets|images)/.*",
        "dest": "frontend/dist/$0"
      },
      {
        "src": "/(.+\\.(?:ico|png|jpg|jpeg|css|js))",
        "dest": "frontend/dist/$1"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/dist/index.html"
      }
    ]
  }